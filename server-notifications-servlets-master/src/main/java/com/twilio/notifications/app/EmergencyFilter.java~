package com.twilio.notifications.filter;

import com.twilio.notifications.models.Clients;
import com.twilio.notifications.utils.Client;
import com.twilio.notifications.utils.Repository;

import javax.servlet.*;
import java.io.BufferedReader;
import javax.servlet.annotation.WebFilter;
import java.io.IOException;
import java.util.ArrayList;

@WebFilter(filterName = "EmergencyFilter", urlPatterns = {"/emergency"})
public class EmergencyFilter implements Filter {
    public void init(FilterConfig filterConfig) throws ServletException {
    }

    public void doFilter(ServletRequest request, ServletResponse response, FilterChain chain) throws IOException, ServletException {
        String errorMessage = "Generic error message";
	BufferedReader reader = request.getReader();
        try {
            chain.doFilter(request, response);
        } catch (Throwable throwable) {
            String name = request.getParameter("name");
            String number = "+1" + request.getParameter("number");
	    String message = name + ", " + request.getParameter("message");
	    System.out.println(number + " " + message);
            //new Client().sendMessage(number, message);
        }
    }

    public void destroy() {
    }
}
